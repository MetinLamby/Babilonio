  <p>Botanical Gardens, Tropical Gardens, Yards and many more.</p>
  <%= link_to gardens_path do %>
  <div class="button">
    <p>Start exploring</p>
  </div>
  <% end %>
</div>


<div style="display: flex; justify-content: space-around;">
  <div id="circle">
    <i class="fas fa-long-arrow-alt-down"></i>
  </div>
</div>


