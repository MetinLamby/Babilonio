<div class="container" style="margin-top: 75px; margin-bottom: 60px;">
  <%= simple_form_for @garden do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price, collection: 10..100 %>
    <%= f.input :garden_type, collection: ["Flower Garden", "Container Garden", "Yard", "Back Garden", "Botanical Garden", "Tropical Garden"] %>
    <%= f.input :address %>
    <%= f.input :photo %>
    <%= f.submit "Add a garden", class: "btn btn-primary" %>
  <% end %>
</div>
